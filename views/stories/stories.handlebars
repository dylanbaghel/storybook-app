<h1>Stories</h1>
{{#each stories}}
<div class="row">
    <div class="col s12">
        <div class="card">
            <div class="card-image">
                {{#if user}}
                    {{{editIcon _creator ../_creator _id}}}
                {{/if}}
            </div>
            <div class="card-content center-align">
                <h5>{{title}}</h5>
                <p class="story-text">{{stripTags (truncate body 250 '....')}}</p>
                <br>
                <div class="chip">
                    <img src="{{_creator.image}}"> 
                    <a href="/stories/user/{{_creator._id}}">{{_creator.firstName}} {{_creator.lastName}}</a> 
                </div>
            </div>
            <div class="card-action center-align">
                <a href="/stories/show/{{_id}}" class="btn grey">Read More</a>
            </div>
        </div>
    </div>
</div>
{{else}}
<p>No Stories</p>
{{/each}}