<h3>Edit Story</h3>
<div class="row">
    <form action="/stories/{{story._id}}?_method=PUT" method="POST" class="col s12">
        <input type="hidden" value="DELETE" name="_method">
        <div class="row">
            <div class="input-field col s6">
                <input type="text" name="title" placeholder="Title" value="{{story.title}}">
                <label for="title">Title</label>
            </div>
            <div class="input-field col s6">
                <select name="status">
                    <option value="public">Public</option>
                    <option value="private">Private</option>
                    <option value="unpublished">Unpublished</option>
                </select>
                <label>Status</label>
            </div>
        </div>
        <div class="row">
            <div class="col s12">
                <p>
                    <label>
                        <input type="checkbox" name="allowComments" class="filled-in" id="filled-in-box" {{#if story.allowComments}}checked="checked"{{/if}}/>
                        <span>Allow Comments</span>
                    </label>
                </p>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                <h5>Tell Us Your Story</h5>
                <textarea required name="body">{{story.body}}</textarea>
            </div>
        </div>
        <input type="submit" value="Submit" class="btn">
    </form>
</div>